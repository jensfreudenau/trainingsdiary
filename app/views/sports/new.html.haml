.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", sports_path
      %li.active= link_to "#{t("web-app-theme.new", :default => "New")}", new_sport_path
  .content
    %h2.title
      = t("web-app-theme.new", :default => "New")
      Sport
    .inner
      = form_for :sport, :url => sports_path, :html => { :class => :form, :remote => true } do |f|
        = render :partial => "form", :locals => {:f => f}
