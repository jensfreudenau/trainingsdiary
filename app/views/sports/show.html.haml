.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", sports_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_sport_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", sport_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.sport.name", :default => t("activerecord.labels.name", :default => "Name"))
          \:
        = @sport.name
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_sport_path(@sport), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), sport_path(@sport), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
