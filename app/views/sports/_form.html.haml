= form_for @sport do |f|
  -if @sport.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sport.errors.count, "error")} prohibited this sport from being saved:"
      %ul
        - @sport.errors.full_messages.each do |msg|
          %li= msg

  .group
    = f.label :name, t("activerecord.attributes.sport.name", :default => "Sport"), :class => :label
    = f.text_field :name, :class => 'text_field'
    = f.hidden_field :user_id, :value => current_user.id
  .group.navform.wat-cf
    %button.button{:type => "submit"}
      = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
      = t("web-app-theme.save", :default => "Save")
    %span.text_button_padding= t("web-app-theme.or", :default => "or")
    = link_to t("web-app-theme.cancel", :default => "Cancel"), sports_path, :class => "text_button_padding link_button"
