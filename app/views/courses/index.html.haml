.block
  .content
    %h2.title
      = t("web-app-theme.courses", :default => "Courses")
      
    .inner
      %ul#sortable
        - @courses.each do |course|
          %h3
            = course.sport.name    
          %li{:class => 'sortlist', :id => "list_#{course.id.to_s}"}
            %table
              %tr
                %td{:class => "name"}
                  = course.name
                  = link_to t("Download"), :controller => "courses", :action =>"download", :id=>course.id.to_s, :filename => course.file.to_s
                %td{:class => "last"}
                  \#{link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_course_path(course)} |
                  \#{link_to "#{t("web-app-theme.delete", :default => "Delete")}", course_path(course), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}
      .actions-bar.wat-cf
