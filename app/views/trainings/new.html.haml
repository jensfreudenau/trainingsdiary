.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", trainings_path
      %li.active= link_to "#{t("web-app-theme.new", :default => "New")}", new_training_path
  .content
    %h2.title
      = t("web-app-theme.new_training", :default => "New Training")
    .inner
      = form_for :training, :url => trainings_path, :html => { :id => 'training', :class => :form, :multipart => true } do |f|
        = render :partial => "form", :locals => {:f => f}
