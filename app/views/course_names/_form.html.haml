= form_for @course_name, :html => { :class => 'form' } do |f|
  -if @course_name.errors.any?
    #error_explanation
      %h2= "#{pluralize(@course_name.errors.count, "error")} prohibited this course name from being saved:"
      %ul
        - @course_name.errors.full_messages.each do |msg|
          %li= msg

  .group
    = f.label :name, t("course names"), :class => :label
    = f.text_field :name, :class => 'text_field'
    = f.hidden_field :user_id, :value => current_user.id
  .group.navform.wat-cf
    %button.button{:type => "submit"}
      = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
      = t("web-app-theme.save", :default => "Save")
    %span.text_button_padding= t("web-app-theme.or", :default => "or")
    = link_to t("web-app-theme.cancel", :default => "Cancel"), course_names_path, :class => "text_button_padding link_button"
