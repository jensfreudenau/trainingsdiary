= javascript_include_tag 'jscolor/jscolor'
= form_for @sport_level do |f|
  -if @sport_level.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sport_level.errors.count, "error")} prohibited this sport_level from being saved:"
      %ul
        - @sport_level.errors.full_messages.each do |msg|
          %li= msg
  %fieldset.edit
    .group
      = f.label :name, t("activerecord.attributes.sport_level.name", :default => "Sportlevel"), :class => :label
      = f.text_field :name, :class => 'text_field', :remote => true
    .group
      = f.label :name, t("activerecord.attributes.sport_level.css", :default => "Color"), :class => :label
      = f.text_field :css, :class => 'text_field color'
      = f.hidden_field :user_id, :value => current_user.id
    .group.navform.wat-cf
      %button.button{:type => "submit"}
        = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
        = t("web-app-theme.save", :default => "Save")
      %span.text_button_padding= t("web-app-theme.or", :default => "or")
      = link_to t("web-app-theme.cancel", :default => "Cancel"), sport_levels_path, :class => "text_button_padding link_button"

